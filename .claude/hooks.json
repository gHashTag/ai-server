{
  "hooks": {
    "UserPromptSubmit": [
      {
        "description": "Автоматическое создание PR в начале задачи",
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/auto-pr-start.sh",
            "timeout": 30000
          }
        ]
      }
    ],
    "PostTaskCompletion": [
      {
        "description": "Полный цикл завершения задачи с автоматическим deployment",
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pr-cleanup.sh",
            "timeout": 30000
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pr-status.sh",
            "timeout": 15000
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/auto-merge-production.sh",
            "timeout": 60000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "description": "Очистка после создания множественных файлов",
        "matcher": "Write.*\\.md$",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/docs-cleanup.sh",
            "timeout": 15000
          }
        ]
      }
    ]
  }
}
