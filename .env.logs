# Конфигурация логирования для AI Server
# Скопируйте нужные переменные в ваш .env файл

# === Основные уровни логирования ===
LOG_LEVEL=info
NODE_ENV=development

# === Inngest CLI логирование ===
INNGEST_LOG_LEVEL=warn
INNGEST_VERBOSE=false

# === Фильтрация HTTP запросов ===
# Показывать ли служебные запросы (health checks, options)
SHOW_HEALTH_CHECKS=false
SHOW_OPTIONS_REQUESTS=false

# === Morgan логирование ===
# Формат: dev, combined, common, short, tiny
MORGAN_FORMAT=dev

# === PM2 логирование ===
# Папка для логов PM2
PM2_LOG_DIR=./logs

# === Кастомные фильтры ===
# Минимальный вывод (только ошибки и старт сервера)
MINIMAL_LOGS=false

# Показывать временные метки в консоли
SHOW_TIMESTAMPS=true

# Цветной вывод в консоли
FORCE_COLOR=true